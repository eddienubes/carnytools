{
  "name": "@carnytools/conventional-release",
  "version": "0.0.4",
  "description": "Helper package to build release commit and changelog according to conventional commits",
  "scripts": {
    "build:prod": "rm -rf dist && tsup ./src --format cjs,esm --no-splitting --dts --tsconfig tsconfig.build.json",
    "build:dev": "tsc -p tsconfig.json"
  },
  "type": "commonjs",
  "exports": {
    "./changelog": {
      "import": "./dist/changelog.mjs",
      "default": "./dist/changelog.js"
    },
    "./commit": {
      "import": "./dist/commit.mjs",
      "default": "./dist/commit.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@carnytools/styles": "workspace:*",
    "@changesets/types": "^6.0.0",
    "vitest": "^1.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@carnytools/styles/prettier",
  "dependencies": {
    "simple-git": "^3.24.0"
  }
}
